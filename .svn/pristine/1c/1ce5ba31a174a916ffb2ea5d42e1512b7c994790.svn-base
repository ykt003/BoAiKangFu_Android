<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tittle_height"
        android:background="@color/background">

        <ImageView
            android:id="@+id/back_medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tittle_marginLeft"
            android:src="@drawable/tittle_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_medical_add"
            android:textColor="@color/white"
            android:textSize="@dimen/tittle_textsize" />

        <ImageView
            android:id="@+id/edit_medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tittle_marginRight"
            android:src="@drawable/edit"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/save_medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tittle_marginRight"
            android:src="@drawable/save" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/table_index_top"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hospital_room_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="150px"
                    android:text="@string/hospital_room_record"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/hospital_room_record_edit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:width="150px"
                    android:background="@drawable/sousuo_et_bg"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_15" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hospital_department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="150px"
                    android:text="@string/hospital_department"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/hospital_department_edit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:width="150px"
                    android:background="@drawable/sousuo_et_bg"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hospital_recovery_diagnosis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="150px"
                    android:text="@string/hospital_recovery_diagnosis"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/hospital_recovery_diagnosis_edit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:width="150px"
                    android:background="@drawable/sousuo_et_bg"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hospital_clinical_diagnosis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="150px"
                    android:text="@string/hospital_clinical_diagnosis"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/hospital_clinical_diagnosis_edit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:width="150px"
                    android:background="@drawable/sousuo_et_bg"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hospital_chief_complaint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="150px"
                    android:text="@string/hospital_chief_complaint"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/hospital_chief_complaint_edit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:width="150px"
                    android:background="@drawable/sousuo_et_bg"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hospital_past_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="150px"
                    android:text="@string/hospital_past_history"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/hospital_past_history_edit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:width="150px"
                    android:background="@drawable/sousuo_et_bg"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
