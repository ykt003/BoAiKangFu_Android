<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">

        <shape>

            <gradient android:angle="270" android:endColor="@color/lightblue" android:startColor="@color/blue" />
            <corners android:radius="20px" />

            <stroke android:width="2px" android:color="@color/blue" android:dashGap="0px" android:dashWidth="20px" />
        </shape>

    </item>

    <item android:state_pressed="false">

        <shape>

            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/lightblue" />
            <corners android:radius="20px" />

            <stroke android:width="2px" android:color="@color/blue" android:dashGap="0px" android:dashWidth="20px" />
        </shape>

    </item>


</selector>