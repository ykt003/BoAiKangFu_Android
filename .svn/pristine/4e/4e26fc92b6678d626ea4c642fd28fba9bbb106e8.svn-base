<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tittle_height"
        android:background="@color/background">

        <ImageView
            android:id="@+id/medical_history_record_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tittle_marginRight"
            android:onClick="back"
            android:src="@drawable/medical_history_record_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/alyn_table_score1"
            android:textColor="@color/white"
            android:textSize="@dimen/tittle_textsize" />

        <ImageView
            android:id="@+id/patient_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tittle_marginRight"
            android:onClick="add"
            android:src="@drawable/add" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/index_layout_marginLeft"
        android:layout_marginRight="@dimen/index_layout_marginRight"
        android:layout_marginTop="@dimen/index_layout_marginTop"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="评定说明"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

        <Spinner
            android:id="@+id/instructions"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/sousuo_et_bg"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/index_layout_marginLeft"
        android:layout_marginRight="@dimen/index_layout_marginRight"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="评定日期"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/sousuo_et_bg"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/index_layout_marginLeft"
        android:layout_marginRight="@dimen/index_layout_marginRight"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="总分"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/scores_tv"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/sousuo_et_bg"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/index_layout_marginLeft"
        android:layout_marginRight="@dimen/index_layout_marginRight"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="百分制得分"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/scores_t"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/sousuo_et_bg"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/index_layout_marginBottom"
        android:layout_marginLeft="@dimen/index_layout_marginLeft"
        android:layout_marginRight="@dimen/index_layout_marginRight"
        android:layout_marginTop="@dimen/index_layout_marginTop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/background_listView_tittle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/assessment_species"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="@string/assessment_species"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/septal_line_white" />

            <TextView
                android:id="@+id/assessment_scores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="@string/assessment_scores"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <ListView
            android:id="@+id/patient_infos_list_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:divider="@drawable/divider"
            android:clipToPadding="true"
            android:cacheColorHint="@color/white"
            android:listSelector="@color/white"
            android:paddingBottom="20dp" />



    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/ykt003/Desktop/working_copies/beijing_boaikangfu_android/app/src/main/res/layout/activity_table_alyn_index.xml -->