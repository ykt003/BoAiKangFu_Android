<?xml version="1.0" encoding="utf-8"?>
<me.zhangls.rilintech.view.ListItemDelete xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:ellipsize="end"
            android:text="我是标题1"
            android:maxLines="2"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/septal_line_white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:ellipsize="end"
            android:text="我是标题2"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/septal_line_white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:ellipsize="end"
            android:text="我是标题3"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="@dimen/list_item_height"
        android:gravity="center"
        android:background="@drawable/bg_item_list_4"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete"
            />
    </LinearLayout>

</me.zhangls.rilintech.view.ListItemDelete>