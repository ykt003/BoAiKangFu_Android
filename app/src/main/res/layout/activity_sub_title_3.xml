<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checked_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="150dp"
            android:text="@string/alyn1_date"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/checked_date_tv"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:width="150dp"
            android:background="@drawable/sousuo_et_bg"
            android:gravity="center_vertical"
            android:inputType="textCapSentences"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_15" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checked_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="150dp"
            android:text="@string/alyn1_instructions"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_16" />

        <Spinner
            android:id="@+id/medical_history_relator_edit"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:width="150dp"
            android:background="@drawable/sousuo_et_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checked_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="150dp"
            android:text="评定人"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/checked_person_tv"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:width="150dp"
            android:background="@drawable/sousuo_et_bg"
            android:gravity="center_vertical"
            android:inputType="textCapSentences"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</LinearLayout>